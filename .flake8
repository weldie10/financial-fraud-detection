[flake8]
# Flake8 configuration for financial fraud detection project

# Maximum line length
max-line-length = 127

# Exclude directories
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    htmlcov,
    .coverage,
    coverage.xml,
    .mypy_cache,
    .ruff_cache

# Ignore specific errors
# E501: line too long (handled by max-line-length)
# E203: whitespace before ':' (conflicts with black)
# W503: line break before binary operator (conflicts with black)
ignore = E203, E501, W503

# Maximum complexity
max-complexity = 10

# Per-file ignores
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811
    notebooks/*:F401,F811

# Show source for errors
show-source = True

# Statistics
statistics = True
